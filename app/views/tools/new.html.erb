<div class="container">
<div class="form">
  <h3>Add Tool</h3>
    <%= simple_form_for [@tool] do |f| %>
    <%= f.input :category, collection: %w[power hand automotive plumbing gardening other] %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file%>
    <%= f.input :location %>
    <div class="btn btn-flat"><%= f.button :submit, 'Add Tool' %></div>
    <% end %>
</div>
</div>
