<div class="container">
<div class="form">
  <h3>Add Tool</h3>
    <%= simple_form_for [@tool] do |f| %>
    <%= f.input :category, collection: ['Power Tools', 'Hand Tools', 'Landscaping', 'Automotive', 'Machinery', 'Other Tools'] %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :location %>
    <div><%= f.button :submit, 'Add Tool', class: "btn btn-ghost"  %></div>
    <% end %>
</div>
</div>
