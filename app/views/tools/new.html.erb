<p>Find me in app/views/tools/new.html.erb</p>

<h1>Add Tool</h1>
    <div class="container">
      <%= simple_form_for [@tool] do |f| %>
        <%= f.input :category, collection: %w[power hand automotive plumbing gardening other] %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :location %>
        <%= f.button :submit, 'Add Tool' %>
      <% end %>
    </div>
