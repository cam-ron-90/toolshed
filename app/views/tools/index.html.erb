<h1>Tools</h1>

<div class="container">
  <div class="cards">
    <% @tools.each do |tool| %>

      <%= link_to tool_path(tool) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= tool.photo %>)">
        <p><%= tool.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
