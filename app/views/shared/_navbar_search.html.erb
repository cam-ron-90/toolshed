<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "draft_tool_shed_logo" %>
  <% end %>
  <div>
    <%= simple_form_for :search, url: tools_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "List a Tool", user_signed_in? ? new_tool_path : user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My ToolBox", user_signed_in? ? dashboard_path : user_session_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= cl_image_tag "https://res.cloudinary.com/dsp3264/image/upload/v1582695374/user_nuk9hx.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Messages", "#", class: "dropdown-item" if user_signed_in? %>
          <%= link_to "Register", new_user_registration_path, class: "nav-link" unless user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" if user_signed_in? %>
          <%= link_to "Sign In", user_session_path, class: "nav-link" unless user_signed_in? %>
        </div>
      </li>
    </ul>
  </div>
</div>
